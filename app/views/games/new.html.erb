<h1>Games#new</h1>
<p><%= @grid.join %></p>
<form action="/score" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid.join %>
  <%= hidden_field_tag :start_time, @start_time %>
  <label for="attempt">What is the longest word you can find?</label>
  <input type="text" id="attempt" name="attempt">
  <input type="submit">
</form>
